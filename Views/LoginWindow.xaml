<Window x:Class="AntMissionManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="ANT Mission Manager - Login" 
        Height="600" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border CornerRadius="20" Background="{StaticResource DarkBackground}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" Opacity="0.5" BlurRadius="30"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- Title Bar -->
            <Grid Grid.Row="0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <materialDesign:PackIcon Kind="Robot" Width="20" Height="20" Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock Text="ANT Manager" 
                              FontSize="14" 
                              FontWeight="SemiBold" 
                              Foreground="{StaticResource PrimaryText}" 
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                       Content="✕" 
                       Width="30" Height="30"
                       Background="Transparent"
                       BorderThickness="0"
                       Foreground="{StaticResource MutedText}"
                       FontSize="16"
                       FontWeight="Bold"
                       Cursor="Hand"
                       Click="CloseButton_Click"
                       Margin="0,0,15,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource ErrorBrush}"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            <!-- Login Form -->
            <Grid Grid.Row="1" Margin="50,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header Section -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,0">
                    <Border Background="{StaticResource PrimaryBrush}" 
                           Width="60" Height="60" 
                           CornerRadius="40"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="ShieldAccount" 
                                               Width="40" Height="40" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock Text="Welcome Back" 
                              Style="{StaticResource HeadingText}"
                              HorizontalAlignment="Center"
                              FontSize="28"/>
                    
                </StackPanel>
                
                <!-- Form Section -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Border Style="{StaticResource GlassCard}" Padding="32" Margin="0">
                        <StackPanel>
                            <!-- Server IP Field -->
                            <Border Background="{StaticResource SurfaceBackground}"
                                   CornerRadius="12"
                                   Margin="0,0,0,32"
                                   BorderBrush="{StaticResource BorderBrush}"
                                   BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Grid.Column="0"
                                                           Kind="ServerNetwork"
                                                           Width="20" Height="20"
                                                           Foreground="{StaticResource MutedText}"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>

                                    <TextBox x:Name="ServerIpTextBox"
                                            Grid.Column="1"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Foreground="{StaticResource PrimaryText}"
                                            FontSize="14"
                                            VerticalAlignment="Center"
                                            Padding="0,15"
                                            Text="{Binding ServerUrl}"
                                            materialDesign:HintAssist.Hint="Server IP (예: 192.168.1.100)"
                                            materialDesign:HintAssist.Foreground="{StaticResource MutedText}"/>
                                </Grid>
                            </Border>
                            <!-- Login Button -->
                            <Button x:Name="LoginButton"
                                   Content="Connect"
                                   Style="{StaticResource ModernPrimaryButton}"
                                   Height="50"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,20"
                                   Command="{Binding LoginCommand}">
                                <Button.Effect>
                                    <DropShadowEffect Color="#6366F1" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                                </Button.Effect>
                            </Button>
                            
                            <!-- Error Message -->
                            <Border x:Name="ErrorBorder"
                                   Background="{StaticResource ErrorBrush}" 
                                   CornerRadius="8" 
                                   Padding="16,12"
                                   Visibility="{Binding IsErrorVisible}"
                                   Opacity="0.9">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="AlertCircle" 
                                                           Width="16" Height="16" 
                                                           Foreground="White"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding ErrorMessage}"
                                              Foreground="White"
                                              FontSize="12"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
            
            <!-- Footer -->
            <Border Grid.Row="2"
                    CornerRadius="0,0,20,20"
                    Background="{StaticResource SurfaceBackground}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="ANT Management System"
                              Style="{StaticResource CaptionText}"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="v1.0.0 version"
                              Style="{StaticResource CaptionText}"
                              HorizontalAlignment="Center"
                              Foreground="{StaticResource PrimaryBrush}"
                              FontWeight="SemiBold"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>