<UserControl x:Class="AntMissionManager.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:models="clr-namespace:AntMissionManager.Models"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="mapViewControl">
    <Grid Background="{StaticResource DarkBackground}">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="12"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Margin="8">
            <!-- Map Canvas -->
            <Border Background="#212121"
                    CornerRadius="12"
                    ClipToBounds="True">
                <Grid>
                    <Canvas x:Name="MapCanvas"
                            MouseWheel="MapCanvas_MouseWheel"
                            MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"
                            MouseMove="MapCanvas_MouseMove"
                            MouseLeftButtonUp="MapCanvas_MouseLeftButtonUp"
                            Background="#212121"
                            ClipToBounds="True"/>
                    
                    <!-- Map Info Overlay (Top Left) -->
                    <Border x:Name="InfoOverlay"
                            Background="#CC1C1C1C"
                            CornerRadius="8"
                            Padding="16,12"
                            Margin="16,16,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top">
                        <Grid Grid.IsSharedSizeScope="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" SharedSizeGroup="VehicleNameColumn"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="BatteryColumn"/>
                                    <ColumnDefinition Width="Auto" SharedSizeGroup="TargetColumn"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="지게차"
                                           Foreground="{StaticResource SecondaryText}"
                                           FontSize="11"
                                           Grid.Column="0"/>
                                <TextBlock Text="배터리"
                                           Foreground="{StaticResource SecondaryText}"
                                           FontSize="11"
                                           Grid.Column="1"
                                           HorizontalAlignment="Right"
                                           Margin="16,0,0,0"/>
                                <TextBlock Text="목표 노드"
                                           Foreground="{StaticResource SecondaryText}"
                                           FontSize="11"
                                           Grid.Column="2"
                                           Margin="16,0,0,0"/>
                            </Grid>

                            <ItemsControl Grid.Row="1"
                                          x:Name="VehicleSummaryItems"
                                          ItemsSource="{Binding Vehicles, ElementName=mapViewControl}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="ContentPresenter">
                                        <Setter Property="Margin" Value="0,0,0,4"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type models:Vehicle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" SharedSizeGroup="VehicleNameColumn"/>
                                                <ColumnDefinition Width="Auto" SharedSizeGroup="BatteryColumn"/>
                                                <ColumnDefinition Width="Auto" SharedSizeGroup="TargetColumn"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       Foreground="{StaticResource PrimaryText}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Grid.Column="1"
                                                       Text="{Binding BatteryLevel, StringFormat={}{0}%}"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"
                                                       Margin="16,0,0,0"
                                                       >
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding HasLowBattery}" Value="True">
                                                                <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding TargetNode}"
                                                       Foreground="{StaticResource PrimaryText}"
                                                       FontSize="12"
                                                       Margin="16,0,0,0"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <TextBlock Grid.Row="1"
                                       Text="차량 정보 없음"
                                       Foreground="{StaticResource SecondaryText}"
                                       FontSize="12"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasItems, ElementName=VehicleSummaryItems}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </Border>
                    
                    <!-- Settings Button (Top Right) -->
                    <Button x:Name="SettingsToggleButton"
                            Content="⚙️"
                            Click="SettingsToggle_Click"
                            Style="{StaticResource ModernPrimaryButton}"
                            Width="40"
                            Height="40"
                            FontSize="16"
                            Margin="0,16,16,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            ToolTip="맵 설정"/>
                    
                    <!-- Settings Panel (Hidden by default) -->
                    <Border x:Name="SettingsPanel"
                            Background="{StaticResource SurfaceBackground}"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,70,16,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Opacity="0.95"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Vertical" Width="260">
                            

                            <TabControl Style="{StaticResource SettingsTabControlStyle}"
                                        ItemContainerStyle="{StaticResource SettingsTabItemStyle}">
                                <TabItem Header="맵">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Border Background="{StaticResource DarkBackground}"
                                               CornerRadius="8"
                                               Padding="12"
                                               Margin="0,0,15,4"
                                               >
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="맵"
                                                          Foreground="{StaticResource AccentBrush}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Margin="0,0,0,12"/>

                                                <!-- Node Size Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="노드 크기"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="NodeSizeSlider"
                                                                Grid.Column="0"
                                                                Minimum="1"
                                                                Maximum="20"
                                                                Value="{Binding NodeSize, ElementName=mapViewControl}"
                                                                TickFrequency="1"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=NodeSizeSlider, StringFormat={}{0:F0}}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,0,0"
                                                                  MinWidth="30"
                                                                  TextAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>
                                                
                                                <!-- Rotation Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="회전 각도"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="RotationSlider"
                                                                Grid.Column="0"
                                                                Minimum="0"
                                                                Maximum="360"
                                                                Value="{Binding RotationAngle, ElementName=mapViewControl}"
                                                                ValueChanged="RotationSlider_ValueChanged"
                                                                TickFrequency="15"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock x:Name="RotationValueText"
                                                                  Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=RotationSlider, StringFormat={}{0:F0}°}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,10,0"
                                                                  MinWidth="40"
                                                                  TextAlignment="Center"/>

                                                        <Button Grid.Column="2"
                                                               Content="↻"
                                                               Click="ResetRotation_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="28"
                                                               Height="28"
                                                               FontSize="14"
                                                               ToolTip="초기화"/>
                                                    </Grid>

                                                    <!-- Quick Rotation Buttons -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                                        <Button Content="90°"
                                                               Click="Rotate90_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="90도 회전"/>
                                                        <Button Content="180°"
                                                               Click="Rotate180_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="180도 회전"/>
                                                        <Button Content="270°"
                                                               Click="Rotate270_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               ToolTip="270도 회전"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Flip Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                                                    <TextBlock Text="맵 수평 반전"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <CheckBox x:Name="FlipCheckBox"
                                                                 IsChecked="{Binding IsFlippedHorizontally, ElementName=mapViewControl}"
                                                                 Checked="FlipHorizontal_Changed"
                                                                 Unchecked="FlipHorizontal_Changed"
                                                                 Content="좌우 반전"
                                                                 Foreground="{StaticResource PrimaryText}"
                                                                 FontSize="12"
                                                                 Margin="0,0,10,0"/>
                                                        <Button Content="⟷"
                                                               Click="ToggleFlip_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="36"
                                                               Height="28"
                                                               FontSize="16"
                                                               ToolTip="토글"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                
                                            </StackPanel>
                                        </Border>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="차량">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Border Background="{StaticResource DarkBackground}"
                                               CornerRadius="8"
                                               Padding="12"
                                               Margin="0,0,0,4">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="차량"
                                                          Foreground="{StaticResource AccentBrush}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Margin="0,0,0,12"/>

                                                <!-- Vehicle Size Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="차량 크기 (x20)"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="VehicleSizeSlider"
                                                                Grid.Column="0"
                                                                Minimum="1"
                                                                Maximum="10"
                                                                Value="{Binding VehicleSize, ElementName=mapViewControl, Mode=TwoWay}"
                                                                TickFrequency="1"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=VehicleSizeSlider, StringFormat={}{0:F0}}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,0,0"
                                                                  MinWidth="30"
                                                                  TextAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>

                                                <!-- Vehicle Label Scale Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="라벨 크기 배율"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="VehicleLabelScaleSlider"
                                                                Grid.Column="0"
                                                                Minimum="0.5"
                                                                Maximum="2.5"
                                                                Value="{Binding VehicleLabelScale, ElementName=mapViewControl, Mode=TwoWay}"
                                                                TickFrequency="0.1"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=VehicleLabelScaleSlider, StringFormat={}{0:F1}}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,0,0"
                                                                  MinWidth="36"
                                                                  TextAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>

                                                <!-- Vehicle Orientation -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="차량 회전"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="VehicleAngleSlider"
                                                                Grid.Column="0"
                                                                Minimum="-180"
                                                                Maximum="180"
                                                                Value="{Binding VehicleAngleOffset, ElementName=mapViewControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                TickFrequency="15"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock x:Name="VehicleAngleValueText"
                                                                  Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=VehicleAngleSlider, StringFormat={}{0:F0}°}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,10,0"
                                                                  MinWidth="40"
                                                                  TextAlignment="Center"/>

                                                        <Button Grid.Column="2"
                                                                Content="↺"
                                                                Width="28"
                                                                Height="28"
                                                                Click="ResetVehicleAngle_Click"
                                                                ToolTip="초기화"
                                                                FontSize="14"
                                                                Style="{StaticResource ModernPrimaryButton}"/>
                                                    </Grid>

                                                    <!-- Quick Vehicle Rotation Buttons -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                                        <Button Content="90°"
                                                               Click="RotateVehicle90_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="90도 회전"/>
                                                        <Button Content="180°"
                                                               Click="RotateVehicle180_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="180도 회전"/>
                                                        <Button Content="270°"
                                                               Click="RotateVehicle270_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               ToolTip="270도 회전"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Vehicle Flip Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                                                    <TextBlock Text="차량 수평 반전"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <CheckBox x:Name="VehicleFlipCheckBox"
                                                                 IsChecked="{Binding AreVehiclesFlipped, ElementName=mapViewControl, Mode=TwoWay}"
                                                                 Checked="VehicleFlip_Checked"
                                                                 Unchecked="VehicleFlip_Checked"
                                                                 Content="좌우 반전"
                                                                 Foreground="{StaticResource PrimaryText}"
                                                                 FontSize="12"
                                                                 Margin="0,0,10,0"/>
                                                        <Button Content="⟷"
                                                               Click="ToggleVehicleFlip_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="36"
                                                               Height="28"
                                                               FontSize="16"
                                                               ToolTip="토글"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="완료"
                                       Click="CompleteSettings_Click"
                                       Style="{StaticResource ModernPrimaryButton}"
                                       Width="90"
                                       Height="36"
                                       FontSize="13"
                                       Margin="0,0,10,0"/>
                                <Button Content="취소"
                                       Click="CancelSettings_Click"
                                       Style="{StaticResource ModernPrimaryButton}"
                                       Width="90"
                                       Height="36"
                                       FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
