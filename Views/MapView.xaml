<UserControl x:Class="AntMissionManager.Views.MapView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="mapViewControl">
    <Grid Background="{StaticResource DarkBackground}">
        <Border Background="{StaticResource CardBackground}"
                CornerRadius="12"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                Margin="8">
            <!-- Map Canvas -->
            <Border Background="#212121"
                    CornerRadius="12"
                    ClipToBounds="True">
                <Grid>
                    <Canvas x:Name="MapCanvas"
                            MouseWheel="MapCanvas_MouseWheel"
                            MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"
                            MouseMove="MapCanvas_MouseMove"
                            MouseLeftButtonUp="MapCanvas_MouseLeftButtonUp"
                            Background="#212121"
                            ClipToBounds="True"/>
                    
                    <!-- Map Info Overlay (Top Left) -->
                    <Border x:Name="InfoOverlay"
                            Background="{StaticResource SurfaceBackground}"
                            CornerRadius="8"
                            Padding="12,8"
                            Margin="16,16,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Opacity="0.9">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Text="Zoom: "
                                          Foreground="{StaticResource SecondaryText}"
                                          FontSize="11"
                                          VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding ZoomLevel, StringFormat={}{0:F2}x, ElementName=mapViewControl}"
                                          Foreground="{StaticResource PrimaryText}"
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Offset: "
                                          Foreground="{StaticResource SecondaryText}"
                                          FontSize="11"
                                          VerticalAlignment="Center"/>
                                <TextBlock Foreground="{StaticResource PrimaryText}"
                                          FontSize="11"
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0:F0}, {1:F0}">
                                            <Binding Path="OffsetX" ElementName="mapViewControl"/>
                                            <Binding Path="OffsetY" ElementName="mapViewControl"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- Settings Button (Top Right) -->
                    <Button x:Name="SettingsToggleButton"
                            Content="⚙️"
                            Click="SettingsToggle_Click"
                            Style="{StaticResource ModernPrimaryButton}"
                            Width="40"
                            Height="40"
                            FontSize="16"
                            Margin="0,16,16,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            ToolTip="맵 설정"/>
                    
                    <!-- Settings Panel (Hidden by default) -->
                    <Border x:Name="SettingsPanel"
                            Background="{StaticResource SurfaceBackground}"
                            CornerRadius="12"
                            Padding="20,16"
                            Margin="0,70,16,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Opacity="0.95"
                            Visibility="Collapsed">
                        <StackPanel Orientation="Vertical" Width="260">
                            

                            <TabControl Style="{StaticResource SettingsTabControlStyle}"
                                        ItemContainerStyle="{StaticResource SettingsTabItemStyle}">
                                <TabItem Header="맵">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Border Background="{StaticResource DarkBackground}"
                                               CornerRadius="8"
                                               Padding="12"
                                               Margin="0,0,15,4"
                                               >
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="맵"
                                                          Foreground="{StaticResource AccentBrush}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Margin="0,0,0,12"/>

                                                <!-- Node Size Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="노드 크기"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="NodeSizeSlider"
                                                                Grid.Column="0"
                                                                Minimum="1"
                                                                Maximum="20"
                                                                Value="{Binding NodeSize, ElementName=mapViewControl}"
                                                                TickFrequency="1"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=NodeSizeSlider, StringFormat={}{0:F0}}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,0,0"
                                                                  MinWidth="30"
                                                                  TextAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>
                                                
                                                <!-- Rotation Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="회전 각도"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="RotationSlider"
                                                                Grid.Column="0"
                                                                Minimum="0"
                                                                Maximum="360"
                                                                Value="{Binding RotationAngle, ElementName=mapViewControl}"
                                                                ValueChanged="RotationSlider_ValueChanged"
                                                                TickFrequency="15"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock x:Name="RotationValueText"
                                                                  Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=RotationSlider, StringFormat={}{0:F0}°}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,10,0"
                                                                  MinWidth="40"
                                                                  TextAlignment="Center"/>

                                                        <Button Grid.Column="2"
                                                               Content="↻"
                                                               Click="ResetRotation_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="28"
                                                               Height="28"
                                                               FontSize="14"
                                                               ToolTip="초기화"/>
                                                    </Grid>

                                                    <!-- Quick Rotation Buttons -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                                        <Button Content="90°"
                                                               Click="Rotate90_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="90도 회전"/>
                                                        <Button Content="180°"
                                                               Click="Rotate180_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="180도 회전"/>
                                                        <Button Content="270°"
                                                               Click="Rotate270_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               ToolTip="270도 회전"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Flip Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                                                    <TextBlock Text="맵 수평 반전"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <CheckBox x:Name="FlipCheckBox"
                                                                 IsChecked="{Binding IsFlippedHorizontally, ElementName=mapViewControl}"
                                                                 Checked="FlipHorizontal_Changed"
                                                                 Unchecked="FlipHorizontal_Changed"
                                                                 Content="좌우 반전"
                                                                 Foreground="{StaticResource PrimaryText}"
                                                                 FontSize="12"
                                                                 Margin="0,0,10,0"/>
                                                        <Button Content="⟷"
                                                               Click="ToggleFlip_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="36"
                                                               Height="28"
                                                               FontSize="16"
                                                               ToolTip="토글"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                
                                            </StackPanel>
                                        </Border>
                                    </ScrollViewer>
                                </TabItem>

                                <TabItem Header="차량">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                                        <Border Background="{StaticResource DarkBackground}"
                                               CornerRadius="8"
                                               Padding="12"
                                               Margin="0,0,0,4">
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="차량"
                                                          Foreground="{StaticResource AccentBrush}"
                                                          FontSize="13"
                                                          FontWeight="Bold"
                                                          Margin="0,0,0,12"/>

                                                <!-- Vehicle Size Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="차량 크기 (x20)"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="VehicleSizeSlider"
                                                                Grid.Column="0"
                                                                Minimum="1"
                                                                Maximum="10"
                                                                Value="{Binding VehicleSize, ElementName=mapViewControl, Mode=TwoWay}"
                                                                TickFrequency="1"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=VehicleSizeSlider, StringFormat={}{0:F0}}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,0,0"
                                                                  MinWidth="30"
                                                                  TextAlignment="Center"/>
                                                    </Grid>
                                                </StackPanel>

                                                <!-- Vehicle Orientation -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                                                    <TextBlock Text="차량 회전"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <Slider x:Name="VehicleAngleSlider"
                                                                Grid.Column="0"
                                                                Minimum="-180"
                                                                Maximum="180"
                                                                Value="{Binding VehicleAngleOffset, ElementName=mapViewControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                TickFrequency="15"
                                                                IsSnapToTickEnabled="True"
                                                                VerticalAlignment="Center"/>

                                                        <TextBlock x:Name="VehicleAngleValueText"
                                                                  Grid.Column="1"
                                                                  Text="{Binding Value, ElementName=VehicleAngleSlider, StringFormat={}{0:F0}°}"
                                                                  Foreground="{StaticResource PrimaryText}"
                                                                  FontSize="12"
                                                                  FontWeight="SemiBold"
                                                                  VerticalAlignment="Center"
                                                                  Margin="10,0,10,0"
                                                                  MinWidth="40"
                                                                  TextAlignment="Center"/>

                                                        <Button Grid.Column="2"
                                                                Content="↺"
                                                                Width="28"
                                                                Height="28"
                                                                Click="ResetVehicleAngle_Click"
                                                                ToolTip="초기화"
                                                                FontSize="14"
                                                                Style="{StaticResource ModernPrimaryButton}"/>
                                                    </Grid>

                                                    <!-- Quick Vehicle Rotation Buttons -->
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                                                        <Button Content="90°"
                                                               Click="RotateVehicle90_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="90도 회전"/>
                                                        <Button Content="180°"
                                                               Click="RotateVehicle180_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               Margin="0,0,6,0"
                                                               ToolTip="180도 회전"/>
                                                        <Button Content="270°"
                                                               Click="RotateVehicle270_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="60"
                                                               Height="30"
                                                               FontSize="11"
                                                               ToolTip="270도 회전"/>
                                                    </StackPanel>
                                                </StackPanel>

                                                <!-- Vehicle Flip Control -->
                                                <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                                                    <TextBlock Text="차량 수평 반전"
                                                              Foreground="{StaticResource SecondaryText}"
                                                              FontSize="12"
                                                              Margin="0,0,0,8"/>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                        <CheckBox x:Name="VehicleFlipCheckBox"
                                                                 IsChecked="{Binding AreVehiclesFlipped, ElementName=mapViewControl, Mode=TwoWay}"
                                                                 Checked="VehicleFlip_Checked"
                                                                 Unchecked="VehicleFlip_Checked"
                                                                 Content="좌우 반전"
                                                                 Foreground="{StaticResource PrimaryText}"
                                                                 FontSize="12"
                                                                 Margin="0,0,10,0"/>
                                                        <Button Content="⟷"
                                                               Click="ToggleVehicleFlip_Click"
                                                               Style="{StaticResource ModernPrimaryButton}"
                                                               Width="36"
                                                               Height="28"
                                                               FontSize="16"
                                                               ToolTip="토글"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </ScrollViewer>
                                </TabItem>
                            </TabControl>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="완료"
                                       Click="CompleteSettings_Click"
                                       Style="{StaticResource ModernPrimaryButton}"
                                       Width="90"
                                       Height="36"
                                       FontSize="13"
                                       Margin="0,0,10,0"/>
                                <Button Content="취소"
                                       Click="CancelSettings_Click"
                                       Style="{StaticResource ModernPrimaryButton}"
                                       Width="90"
                                       Height="36"
                                       FontSize="13"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
