<Window x:Class="AntMissionManager.Views.CommonDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Confirmation"
        Height="220" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">

    <Border CornerRadius="12" Background="{StaticResource DarkBackground}" BorderBrush="#475569" BorderThickness="0.8">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" Opacity="0.5" BlurRadius="30"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="{StaticResource CardBackground}" CornerRadius="12,12,0,0" >
                <Grid Margin="20,0">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon x:Name="IconType" Kind="Alert" Width="20" Height="20"
                                               Foreground="{StaticResource WarningBrush}" Margin="0,0,12,0"/>
                        <TextBlock x:Name="TitleText" Text="Confirmation"
                                  FontSize="15"
                                  FontWeight="SemiBold"
                                  Foreground="{StaticResource PrimaryText}"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Message Content -->
            <Border Grid.Row="1" Background="{StaticResource CardBackground}" Padding="30,20">
                <TextBlock x:Name="MessageText" Text="Are you sure?"
                          FontSize="14"
                          Foreground="{StaticResource SecondaryText}"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          TextAlignment="Center"/>
            </Border>

            <!-- Buttons -->
            <Border Grid.Row="2" Background="{StaticResource CardBackground}" CornerRadius="0,0,12,12" Padding="30,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="ConfirmButton" Content="Yes"
                           Width="100" Height="36"
                           Background="{StaticResource PrimaryBrush}"
                           Foreground="White"
                           BorderThickness="0"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="ConfirmButton_Click"
                           Margin="0,0,12,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="CancelButton" Content="No"
                           Width="100" Height="36"
                           Background="{StaticResource SurfaceBackground}"
                           Foreground="{StaticResource PrimaryText}"
                           BorderThickness="1"
                           BorderBrush="{StaticResource BorderBrush}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Cursor="Hand"
                           Click="CancelButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                   BorderBrush="{TemplateBinding BorderBrush}"
                                                   BorderThickness="{TemplateBinding BorderThickness}"
                                                   CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
