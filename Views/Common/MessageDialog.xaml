<Window x:Class="AntManager.Views.Common.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Message"
        Height="250" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Icon="/icon/detail_green_logo_ico.ico">
    
    <Border CornerRadius="16" Background="{StaticResource DarkBackground}">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" Opacity="0.4" BlurRadius="20"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            
            <!-- Message Content -->
            <Border Grid.Row="0" Padding="32,24">
                <StackPanel VerticalAlignment="Center">
                    <Border Background="{StaticResource PrimaryBrush}" 
                           Width="60" Height="60" 
                           CornerRadius="30"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20">
                        <materialDesign:PackIcon x:Name="MessageIcon"
                                               Kind="Information"
                                               Width="28" Height="28"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                    </Border>
                    
                    <TextBlock x:Name="MessageText"
                              Text="Message content goes here"
                              FontSize="16"
                              FontWeight="Medium"
                              Foreground="{StaticResource PrimaryText}"
                              TextWrapping="Wrap"
                              TextAlignment="Center"
                              HorizontalAlignment="Center"
                              MaxWidth="350"
                              LineHeight="24"/>
                </StackPanel>
            </Border>
            
            <!-- Buttons -->
            <Border Grid.Row="1" Background="{StaticResource SurfaceBackground}" 
                   CornerRadius="0,0,16,16" Padding="24,16">
                <StackPanel x:Name="ButtonPanel" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Center">
                    
                    <Button x:Name="OkButton"
                           Content="OK"
                           Style="{StaticResource ModernPrimaryButton}"
                           Width="100"
                           Height="40"
                           IsDefault="True"
                           Click="OkButton_Click"
                           Margin="0,0,8,0"/>
                    
                    <Button x:Name="CancelButton"
                           Content="Cancel"
                           Style="{StaticResource ModernPrimaryButton}"
                           Width="100"
                           Height="40"
                           IsCancel="True"
                           Visibility="Collapsed"
                           Click="CancelButton_Click"
                           Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>